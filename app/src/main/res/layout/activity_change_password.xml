<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".user.PasswordActivty">
    <LinearLayout
        android:background="@color/pinkcolor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50">
        <ImageView
            android:id="@+id/backpassword"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_gravity="center_vertical"
            android:src="@drawable/arrowback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ImageView>

    </LinearLayout>
    <TextView
        android:fontFamily="@font/font"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/dp50"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:text="Enter Password"
        android:textSize="@dimen/sp18"
        android:layout_height="wrap_content">

    </TextView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp">
        <EditText
            android:fontFamily="@font/font"
            android:maxLines="1"
            android:inputType="textPassword"
            android:backgroundTint="@color/pinkcolor"
            android:id="@+id/edt_password"
            android:layout_toStartOf="@+id/tv_passwordimage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/tv_passwordimage"
            android:padding="@dimen/_2sdp"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/hidepasswrod"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_5sdp"/>
    </RelativeLayout>


    <TextView
        android:fontFamily="@font/font"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:text="Enter confirm  Password"
        android:textSize="@dimen/sp18"
        android:layout_height="wrap_content">

    </TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp">

        <EditText
            android:fontFamily="@font/font"
            android:maxLines="1"
            android:inputType="textPassword"
            android:backgroundTint="@color/pinkcolor"
            android:id="@+id/edt_confrm_password"
            android:layout_toStartOf="@+id/tv_confrimimage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>
        <ImageView
            android:id="@+id/tv_confrimimage"
            android:padding="@dimen/_2sdp"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/hidepasswrod"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_5sdp"/>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp">
        <TextView
            android:fontFamily="@font/font"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginTop="@dimen/dp30"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:text="@string/minimum_8_characters"
            android:textSize="@dimen/sp15"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:fontFamily="@font/font"
            android:layout_marginTop="@dimen/dp5"
            android:layout_marginLeft="@dimen/dp20"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:text="At least one capital letters"
            android:textSize="@dimen/sp15"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:fontFamily="@font/font"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginTop="@dimen/dp5"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:text="At least one small letter"
            android:textSize="@dimen/sp15"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:fontFamily="@font/font"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginTop="@dimen/dp5"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:text="At least one special character"
            android:textSize="@dimen/sp15"
            android:layout_height="wrap_content">

        </TextView>
    </LinearLayout>
    <Button
        android:id="@+id/btn_password"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp30"
        android:textColor="@color/white"
        android:textSize="@dimen/sp18"
        android:textAllCaps="false"
        android:text="Next"
        android:layout_width="200dp"
        android:layout_height="wrap_content">

    </Button>

</LinearLayout>