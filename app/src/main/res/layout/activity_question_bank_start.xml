<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.QuestionBankStartActivity">

    <RelativeLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/common">

        <ImageView

            android:layout_marginTop="@dimen/dp20"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginLeft="5dp"
            android:id="@+id/backbutton_question"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_arrowback"/>

        <TextView
            android:fontFamily="@font/nunitofont"
            android:visibility="gone"
            android:layout_toStartOf="@+id/settingbtn"
            android:layout_toEndOf="@+id/backbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Question Bank"
            android:textColor="@color/whitetext"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/backbutton" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/settingbtn"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_alignParentEnd="true"

            android:layout_marginTop="20dp"
            android:layout_marginRight="@dimen/dp15"
            android:src="@drawable/bookmarkb"
            tools:ignore="OnClick" />

    </RelativeLayout>


    <TextView
        android:id="@+id/vbdfdsx"
        android:fontFamily="@font/font"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bones , Joints and Cartilags and something else"
        android:textSize="@dimen/dp20"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_margin="@dimen/dp10"/>

    <TextView
        android:id="@+id/dvsbdsfdf"
        android:fontFamily="@font/font"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="General Anatomy - question Bank"
        android:textColor="@color/common"
        android:layout_margin="@dimen/dp10"/>

    <TextView
        android:fontFamily="@font/font"
        android:id="@+id/questionis"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="25 Question"
        android:textSize="@dimen/dp15"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp30"/>

    <RelativeLayout
        android:layout_marginTop="@dimen/dp15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp15"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp15"
        android:orientation="horizontal">
        <LinearLayout
            android:visibility="gone"
          android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:fontFamily="@font/font"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="4 Classes"
                android:textColor="@color/common"
                android:textSize="15.0sp"
                />

            <ImageView
                android:layout_marginStart="@dimen/dp15"
                android:layout_gravity="center"
                android:layout_width="@dimen/dp15"
                android:layout_height="15.0dip"
                android:src="@drawable/redbookmark"/>
            <TextView
                android:fontFamily="@font/font"
                android:layout_marginStart="@dimen/dp5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textColor="@color/common"/>
            <ImageView
                android:layout_marginStart="@dimen/dp15"
                android:layout_gravity="center"
                android:layout_width="@dimen/dp15"
                android:layout_height="15.0dip"
                android:src="@drawable/star"/>
            <TextView
                android:fontFamily="@font/font"
                android:layout_marginStart="@dimen/dp5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textColor="@color/common"/>
            <ImageView
                android:layout_marginStart="@dimen/dp15"
                android:layout_gravity="center"
                android:layout_width="@dimen/dp15"
                android:layout_height="15.0dip"
                android:src="@drawable/redbookmark"/>
            <TextView
                android:fontFamily="@font/font"
                android:layout_marginStart="@dimen/dp5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textColor="@color/common"/>

        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:id="@+id/startsloving"
     android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Start Solving"
        android:textSize="@dimen/dp15"
        android:background="@drawable/filledcommon"
        android:paddingVertical="@dimen/dp10"
        android:paddingHorizontal="40dp"/>



</LinearLayout>