<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/_15sdp"
    android:layout_height="match_parent"
    tools:context=".questiobank.QuestionBankTestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:fontFamily="@font/nunitofont"
                android:visibility="gone"
                android:id="@+id/txt_question_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:text="SIMPLE EQUATIONS OF A MOTORS"
                android:textColor="@color/mainColor"
                android:textSize="@dimen/_15sdp">

            </TextView>

            <ImageView
                android:visibility="gone"
                android:id="@+id/img_go_back"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/cross_circle">

            </ImageView>
        </LinearLayout>

        <TextView
            android:fontFamily="@font/font"
            android:id="@+id/txt_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:text="Question"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sdp">

        </TextView>

        <TextView
            android:fontFamily="@font/font"
            android:id="@+id/txt_ans_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:background="@drawable/black_border"
            android:padding="@dimen/dp15"
            android:text="Arties always carry oxygenated blood throughtout the body"
            android:textSize="@dimen/sp17" />


        <TextView
            android:fontFamily="@font/font"
            android:id="@+id/txt_answaer_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:background="@drawable/black_border"
            android:padding="@dimen/dp15"
            android:text="Arties always carry oxygenated blood throughtout the body"
            android:textSize="@dimen/sp17">

        </TextView>

        <TextView
            android:fontFamily="@font/font"
            android:id="@+id/txt_answer_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:background="@drawable/black_border"
            android:padding="@dimen/dp15"
            android:text="Arties always carry oxygenated blood throughtout the body"
            android:textSize="@dimen/sp17">

        </TextView>

        <TextView
            android:fontFamily="@font/font"
            android:id="@+id/txt_answer_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:background="@drawable/black_border"
            android:padding="@dimen/dp15"
            android:text="Arties always carry oxygenated blood throughtout the body"
            android:textSize="@dimen/sp17">

        </TextView>

        <TextView
            android:fontFamily="@font/font"
            android:id="@+id/txt_description"
            android:layout_marginTop="@dimen/_7sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/lnr_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/submit_test"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:fontFamily="@font/font"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/bluecolor_circle"
                android:gravity="center"
                android:text="Submit"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/sp17" />

        <!--    <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:text="Test completion"
                android:textColor="@color/black"
                android:textSize="13sp" />-->
        </LinearLayout>




        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/float_count_dcr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_weight="3"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:src="@drawable/back">

        </com.google.android.material.floatingactionbutton.FloatingActionButton>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/count_float_incr"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_weight="3"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:src="@drawable/arrow_forword">

        </com.google.android.material.floatingactionbutton.FloatingActionButton>

    </LinearLayout>

</RelativeLayout>