<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".minitest.MiniTestActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/miniTest_linear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/pinkcolor"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/txt_back"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_gravity="end"
                    android:src="@drawable/ic__close"/>
                <TextView
                    android:fontFamily="@font/font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Question Bank"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_15sdp"/>
                <TextView
                    android:fontFamily="@font/font"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Taken on 22 Dec 2020"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_10sdp"/>
                <TextView
                    android:fontFamily="@font/font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Predicted Rank *"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/white"
                    android:background="@color/common1"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_12sdp"/>
                <RelativeLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">
                    <ImageView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:fontFamily="@font/font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500th"
                        android:visibility="gone"
                        android:textColor="@color/black"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <TextView
                    android:fontFamily="@font/font"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Out of 258130"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:fontFamily="@font/font"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Since you have taken this test after announcement of results, your rank is predicted. Next time taken this test when they are Live to get a real time rank and be featured in the top ranker's list"
                    android:background="@drawable/grey_corners_0_radious"
                    android:textColor="@color/white"
                    android:padding="@dimen/dp10"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_20sdp"/>

                <TextView
                    android:fontFamily="@font/font"
                    android:id="@+id/tv_review"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="wrap_content"
                    android:text="REVIEW ANSWERS"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:paddingTop="@dimen/_5sdp"
                    android:background="#FF7185"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_100sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/miniTest_linear2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:elevation="5dp"
                android:background="@color/white"
                android:layout_marginTop="-110dp"
                android:paddingBottom="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_below="@id/miniTest_linear1">
                <TextView
                    android:fontFamily="@font/font"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_20sdp"/>
                <TextView
                    android:fontFamily="@font/font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total score out of 40"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"/>
                <TextView
                    android:fontFamily="@font/font"
                    android:visibility="gone"
                    android:id="@+id/txt_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="75.00 Percentile"
                    android:paddingVertical="@dimen/_3sdp"
                    android:paddingHorizontal="@dimen/_15sdp"
                    android:background="@color/light_gray_a9a9a9"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_13sdp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:orientation="horizontal">
                    <TextView
                        android:fontFamily="@font/font"
                        android:id="@+id/txt_crt_ans"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textColor="@color/black"/>
                    <TextView
                        android:fontFamily="@font/font"
                        android:id="@+id/txt_incr_ansr"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textColor="@color/black"/>
                    <TextView
                        android:fontFamily="@font/font"
                        android:visibility="gone"
                        android:id="@+id/txt_skp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:orientation="horizontal">
                    <TextView
                        android:fontFamily="@font/font"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Correct"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textColor="@color/black"/>
                    <TextView
                        android:fontFamily="@font/font"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Wrong"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textColor="@color/black"/>
                    <TextView
                        android:fontFamily="@font/font"
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Skipped"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>

            <!--
                        <Button
                            android:id="@+id/see_position"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="See your position"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:layout_centerHorizontal="true"
                            android:drawableEnd="@drawable/ic_expand"
                            android:layout_below="@id/miniTest_linear2"
                            android:backgroundTint="@color/common"/>
            -->


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>