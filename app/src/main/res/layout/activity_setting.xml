<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:weightSum="20"
    android:background="@color/common"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".setting.SettingActivity">
    <LinearLayout
        android:weightSum="8.0"
        android:layout_height="50.0dip"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_weight="1.0"
        android:background="@color/common">


        <ImageView
            android:id="@+id/backbutton_setting"
            android:layout_height="20.0dip"
            android:layout_width="0.0dip"
            android:layout_weight="1.0"
            android:src="@drawable/arrowback"
            android:layout_marginTop="15.0dip"/>

        <TextView
            android:fontFamily="@font/nunitofont"
            android:layout_height="30.0dip"
            android:layout_width="wrap_content"
            android:layout_weight="1.0"
            android:layout_marginTop="10.0dip"
            android:text="Settings"
            android:layout_marginLeft="10.0dip"
            android:textColor="#fffaf6f6"
            android:textStyle="bold"
            android:textSize="20.0sp"/>

    </LinearLayout>



    <LinearLayout
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/_10sdp"
            >

        <TextView
            android:fontFamily="@font/font"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Account"
            android:textColor="@color/blacktext"
            android:textStyle="bold"
            android:textSize="20.0sp"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image_profile"
            android:layout_height="100.0dip"
            android:layout_width="100.0dip"
            android:src="@drawable/profile"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>



        <TextView
            android:fontFamily="@font/font"
            android:padding="@dimen/_8sdp"
            android:id="@+id/editprofile"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="Edit Information"
            android:textColor="@color/blacktext"
            android:textSize="15.0sp"
            />

        <View
            android:layout_width="match_parent"
            android:background="@color/common"
            android:layout_height="1dp"></View>

   <!--     <TextView
            android:id="@+id/txt_change_password"
            android:padding="@dimen/_8sdp"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="Change Password"
            android:textColor="@color/blacktext"
            android:textSize="15.0sp" />
        <View
            android:layout_width="match_parent"
            android:background="@color/common"
            android:layout_height="1dp"></View>
-->

        <TextView
            android:fontFamily="@font/font"
            android:id="@+id/txt_couser_selection"
            android:padding="@dimen/_8sdp"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="Physicology"
            android:textColor="#ff3a3a3a"
            android:textSize="15.0sp"
            />
        <View
            android:layout_width="match_parent"
            android:background="@color/common"
            android:layout_height="1dp"></View>



        <TextView
            android:fontFamily="@font/font"
            android:visibility="gone"
            android:padding="@dimen/_8sdp"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="Cartilages and bones"
            android:textColor="@color/blacktext"
            android:textSize="15.0sp" />
        <View
            android:visibility="gone"
            android:layout_width="match_parent"
            android:background="@color/common"
            android:layout_height="1dp"></View>
        <TextView
            android:fontFamily="@font/font"
            android:id="@+id/logout"
            android:padding="@dimen/_8sdp"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="Logout"
            android:textColor="@color/blacktext"
            android:textSize="15.0sp" />
<!--
        <View
            android:layout_width="match_parent"
            android:background="@color/common"
            android:layout_height="1dp"/>
-->

        </LinearLayout>

    </LinearLayout>




</LinearLayout>