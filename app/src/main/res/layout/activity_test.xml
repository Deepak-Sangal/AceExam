<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dp20"
    android:orientation="vertical">

    <LinearLayout
        android:layout_above="@+id/heeeeeeeee"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:fontFamily="@font/font"
                android:id="@+id/txt_question_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:text="SIMPLE EQUATIONS OF A MOTORS"
                android:textColor="@color/common"
                android:textSize="@dimen/_20sdp">

            </TextView>

            <ImageView
                android:id="@+id/img_go_back"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/cross_circle"
                android:visibility="gone">


            </ImageView>
        </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginRight="@dimen/dp15"
                    android:visibility="gone"
                    android:id="@+id/img_unbook"
                    android:layout_toLeftOf="@+id/img_book"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/unbookmark" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/img_book"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="@dimen/dp15"
                    android:src="@drawable/bookmarkcommon"
                    />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/font"
                android:id="@+id/questioncount"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:text="1"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:padding="1dp"
                android:textSize="@dimen/_16sdp"
                android:gravity="center"
                android:background="@drawable/corner30pink"
                android:textColor="@color/common"/>
        <TextView
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_toEndOf="@+id/questioncount"
            android:fontFamily="@font/font"
            android:id="@+id/txt_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question"
            android:layout_marginBottom="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textSize="20sp">


        </TextView>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/firsttext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:background="@drawable/black_border">
            <TextView
                android:fontFamily="@font/font"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:text="A"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:padding="1dp"
                android:textSize="@dimen/_16sdp"
                android:gravity="center"
                android:background="@drawable/corner30pink"
                android:textColor="@color/common"/>
            <TextView
                android:fontFamily="@font/font"
                android:layout_marginStart="@dimen/_10sdp"
                android:id="@+id/txt_ans_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Arties always carry oxygenated blood throughtout the body"
                android:textSize="@dimen/sp17" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/secondtest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
        android:layout_marginTop="@dimen/dp20"
        android:background="@drawable/black_border">
            <TextView
                android:fontFamily="@font/font"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:text="B"
                android:layout_gravity="center"
                android:padding="1dp"
                android:textStyle="bold"
                android:textSize="@dimen/_16sdp"
                android:gravity="center"
                android:background="@drawable/corner30pink"
                android:textColor="@color/common"/>
            <TextView
                android:fontFamily="@font/font"
                android:layout_marginStart="@dimen/_10sdp"
                android:id="@+id/txt_answaer_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Arties always carry oxygenated blood throughtout the body"
                android:textSize="@dimen/sp17" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/thirdtest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
        android:layout_marginTop="@dimen/dp20"

        android:background="@drawable/black_border">
            <TextView
                android:fontFamily="@font/font"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:text="C"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:padding="1dp"
                android:textSize="@dimen/_16sdp"
                android:gravity="center"
                android:background="@drawable/corner30pink"
                android:textColor="@color/common"/>
            <TextView
                android:fontFamily="@font/font"
                android:layout_marginStart="@dimen/_10sdp"
                android:id="@+id/txt_answer_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Arties always carry oxygenated blood throughtout the body"
                android:textSize="@dimen/sp17" />

        </LinearLayout><LinearLayout
        android:id="@+id/fourthtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
        android:layout_marginTop="@dimen/dp20"
        android:background="@drawable/black_border">
            <TextView
                android:fontFamily="@font/font"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:text="D"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:padding="@dimen/dimen_1dp"
                android:textSize="@dimen/_16sdp"
                android:gravity="center"
                android:background="@drawable/corner30pink"
                android:textColor="@color/common"/>
            <TextView
                android:fontFamily="@font/font"
                android:layout_marginStart="@dimen/_10sdp"
                android:id="@+id/txt_answer_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Arties always carry oxygenated blood throughtout the body"
                android:textSize="@dimen/sp17" />

        </LinearLayout>







    </LinearLayout>


    <LinearLayout
        android:id="@+id/lnr_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

  <RelativeLayout
      android:id="@+id/heeeeeeeee"
      android:layout_alignParentBottom="true"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <TextView
          android:fontFamily="@font/font"
          android:id="@+id/submit_test"
          android:layout_width="60dp"
          android:layout_height="60dp"
          android:layout_gravity="center"
          android:background="@drawable/bluecolor_circle"
          android:gravity="center"
          android:text="Submit"
          android:textAlignment="center"
          android:textColor="@color/black"
          android:textSize="15sp" />

      <TextView
          android:fontFamily="@font/font"
          android:visibility="gone"
          android:layout_below="@+id/submit_test"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/dp5"
          android:text="Test completion"
          android:textColor="@color/black"
          android:textSize="13sp" />

      <TextView
          android:fontFamily="@font/font"
          android:layout_centerHorizontal="true"
          android:id="@+id/txt_timer"
          android:layout_width="60dp"
          android:layout_height="60dp"
          android:layout_marginLeft="@dimen/dp10"
          android:background="@drawable/bluecolor_circle"
          android:gravity="center"
          android:text="22:40"
          android:textAlignment="center"
          android:textColor="@color/black"
          android:textSize="15sp" />
      <TextView
          android:fontFamily="@font/font"
          android:visibility="gone"
          android:layout_centerHorizontal="true"
          android:layout_below="@+id/txt_timer"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/dp5"
          android:text="Time Left"
          android:textColor="@color/black"
          android:textSize="13sp" />

      <com.google.android.material.floatingactionbutton.FloatingActionButton
          android:id="@+id/count_float_incr"
          android:layout_marginRight="@dimen/_5sdp"
          android:layout_alignParentRight="true"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:background="@color/white"
          android:backgroundTint="@color/white"
          android:src="@drawable/arrow_forword">

      </com.google.android.material.floatingactionbutton.FloatingActionButton>

  </RelativeLayout>


