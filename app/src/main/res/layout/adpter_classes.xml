<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/opendrwable"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/namecourse"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="@string/classes"
        android:paddingLeft="@dimen/dp15"
        android:textColor="#ff3a3a3a"
        android:textStyle="bold"
        android:textSize="15.0sp"
        android:layout_marginTop="20.0dip"/>

    <RelativeLayout
        android:layout_marginTop="@dimen/dp5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginLeft="@dimen/dp15"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/count"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="4 Classes"
            android:textColor="@color/common"
            android:textSize="15.0sp"
          />

        <ImageView
            android:visibility="gone"
            android:layout_marginStart="@dimen/dp15"
            android:layout_gravity="center"
            android:layout_width="@dimen/dp15"
            android:layout_height="15.0dip"
            android:src="@drawable/redbookmark"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/bookmarkcount"
            android:layout_marginStart="@dimen/dp5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textColor="@color/common"/>

</LinearLayout>
        <ImageView
            android:id="@+id/open"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_alignParentEnd="true"
            android:src="@drawable/downarrow"/>


    </RelativeLayout>

    <View
        android:layout_marginTop="@dimen/dp10"
        android:layout_height="1.0dip"
        android:layout_width="fill_parent"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginLeft="@dimen/dp15"
        android:background="@color/common"/>

    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp10"
        android:id="@+id/classesrecycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginLeft="@dimen/dp15"/>

</LinearLayout>