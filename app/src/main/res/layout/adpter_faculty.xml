<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardElevation="@dimen/dimen_10dp"
    android:layout_margin="@dimen/dp5"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_15dp"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/faculty_image"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:src="@drawable/profile"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF000000"/>
                <TextView
                    android:id="@+id/faculty_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr. Sakshi Arora"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    android:textSize="17sp"
                    android:layout_toRightOf="@id/faculty_image"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/faculty_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/faculty_name"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    android:layout_toRightOf="@id/faculty_image"
                    android:text="Contributing Editor"
                    android:textColor="@color/blue_00ade6"
                    android:textSize="@dimen/dimen_15sp" />
                <TextView
                    android:id="@+id/faculty_department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Obstetrics &amp; Gynecology"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    android:layout_below="@id/faculty_post"
                    android:layout_toRightOf="@id/faculty_image"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/gray"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">
                <ImageView
                    android:id="@+id/faculty_quotes_image"
                    android:layout_width="@dimen/dp30"
                    android:layout_height="@dimen/dp30"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:src="@drawable/quotes"/>
                <TextView
                    android:id="@+id/faculty_quotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Failure doesn't mean the \n Game is over\n it means try AGAIN with \n EXPERIENCE"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_marginBottom="@dimen/dimen_15dp"
                    android:textSize="@dimen/dimen_15sp"
                    android:layout_toRightOf="@id/faculty_quotes_image"
                    android:textColor="@color/black"/>

            </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>