<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/nameeeee"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip"
        android:paddingLeft="@dimen/dp15"
        android:text="@string/classes"
        android:textColor="#ff3a3a3a"
        android:textSize="15.0sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginTop="@dimen/dp5"
        android:layout_marginRight="@dimen/dp15"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/topiccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="4 Classes"
                android:textColor="@color/common"
                android:textSize="15.0sp" />

            <ImageView
                android:visibility="gone"
                android:layout_width="@dimen/dp15"
                android:layout_height="15.0dip"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp15"
                android:src="@drawable/redbookmark" />

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp5"
                android:text="4"
                android:textColor="@color/common" />

            <ImageView
                android:visibility="gone"
                android:layout_width="@dimen/dp15"
                android:layout_height="15.0dip"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp15"
                android:src="@drawable/star" />

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp5"
                android:text="4"
                android:textColor="@color/common" />

            <ImageView
                android:visibility="gone"
                android:layout_width="@dimen/dp15"
                android:layout_height="15.0dip"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp15"
                android:src="@drawable/redbookmark" />

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp5"
                android:text="4"
                android:textColor="@color/common" />

        </LinearLayout>

        <ImageView
            android:id="@+id/open1"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_alignParentEnd="true"
            android:src="@drawable/downarrow" />


    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginRight="@dimen/dp15"
        android:background="@color/common" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/quetionbankrecycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginRight="@dimen/dp15"
        android:visibility="gone" />

</LinearLayout>