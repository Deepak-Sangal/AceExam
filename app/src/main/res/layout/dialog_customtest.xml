<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/dp10"
    android:background="@color/white"
    android:layout_margin="@dimen/dp30"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:fontFamily="@font/font"
        android:layout_marginTop="@dimen/dp10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Custom Test"
        android:textColor="@color/black"/>
    <RelativeLayout

        android:layout_marginTop="@dimen/dp20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:fontFamily="@font/font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Please Enter Number of test"/>

        <TextView
            android:fontFamily="@font/font"
            android:id="@+id/changenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@color/teal_200"/>


    </RelativeLayout>
    <EditText
        android:fontFamily="@font/font"
        android:backgroundTint="@color/pinkcolor"
        android:layout_marginTop="@dimen/dp10"
        android:id="@+id/otppassword"
        android:hint="Number Of Question"
        android:layout_gravity="center"
        android:gravity="center"
        android:inputType="number"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



    <Button
        android:id="@+id/btn_sumit"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp30"
        android:textColor="@color/white"
        android:textSize="@dimen/sp18"
        android:textAllCaps="false"
        android:text="SUBMIT"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>


</LinearLayout>