<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".peral.PearlsFragement">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="@dimen/dp20"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20.0dip"
            android:text="Pearl"
            android:textColor="@color/common"
            android:textSize="25.0sp"
            android:textStyle="bold" />


        <LinearLayout
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15.0dip"
            android:background="@drawable/newgrey"
            android:orientation="horizontal"
            android:padding="@dimen/dp10"
            android:weightSum="5.0">


            <ImageView
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:layout_gravity="center"
                android:layout_marginLeft="20.0dip"
                android:src="@drawable/searchgrey" />

            <TextView
                android:layout_width="100.0dip"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="Search"
                android:textColor="#ff8e8b8b"
                android:textSize="15.0sp"
                android:textStyle="bold" />

            <ImageView
                android:visibility="gone"
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:layout_gravity="center"
                android:layout_marginLeft="140.0dip"
                android:background="@color/common"
                android:src="@drawable/mic" />


        </LinearLayout>


        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="100.0dip"
                android:layout_height="30.0dip"
                android:layout_marginLeft="@dimen/dp15"
                android:gravity="center"
                android:text="All Pearls"
                android:textColor="@color/blacktext"
                android:textSize="15.0sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/click"
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:layout_gravity="center_vertical"
                android:src="@drawable/right" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/perlrecyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp5"
            android:visibility="gone" />


    </LinearLayout>

    <ProgressBar
        android:id="@+id/pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

</FrameLayout>