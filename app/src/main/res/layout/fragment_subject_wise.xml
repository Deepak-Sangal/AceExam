<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".exam.ExamFragement">

    <LinearLayout
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical">


        <TextView
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="Exams"
            android:layout_marginTop="@dimen/dp15"
            android:paddingLeft="@dimen/dp15"
            android:textColor="@color/common"
            android:textSize="25.0sp"/>



        <HorizontalScrollView
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp20"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent">



            <LinearLayout
                android:layout_height="50.0dip"
                android:layout_width="match_parent"
                android:orientation="horizontal">


                <TextView
                    android:layout_height="fill_parent"
                    android:layout_width="120.0dip"
                    android:text="Grand Test"
                    android:textColor="#fff4eded"
                    android:textSize="12sp"
                    android:layout_marginLeft="15.0dip"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/cornerswithfill"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="120.0dip"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15.0dip"
                    android:background="@drawable/whiteborder"
                    android:gravity="center"
                    android:text="All Test"
                    android:textColor="@color/common"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_height="fill_parent"
                    android:layout_width="120.0dip"
                    android:text="Mini Test"
                    android:textColor="@color/common"
                    android:textSize="12sp"
                    android:layout_marginLeft="15.0dip"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/whiteborder"
                    android:textStyle="bold"/>



                <TextView
                    android:layout_height="fill_parent"
                    android:layout_width="120.0dip"
                    android:text="Subject"
                    android:textColor="@color/common"
                    android:textSize="12sp"
                    android:layout_marginLeft="15.0dip"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/whiteborder"
                    android:textStyle="bold"/>


            </LinearLayout>

        </HorizontalScrollView>
        <View
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/greytext"
            android:layout_marginLeft="10dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/subjectrecycel"/>


    </LinearLayout>

</FrameLayout>